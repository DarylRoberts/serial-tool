{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Open QtDesigner",
            "type": "process",
            "command": "C:/Python3.7_64x/Lib/site-packages/pyqt5_tools/Qt/bin/designer.exe",
            "args": [
                "${workspaceFolder}/src/gui.ui"
            ],
            "problemMatcher": []
        },
        {
            "label": "ui -> py",
            "type": "process",
            "command": "generatePyFromUi.bat",
            "options": {
                "cwd": "${workspaceFolder}/src/gui"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate .exe",
            "type": "process",
            "command": "src/to_exe.py",
            "problemMatcher": []
        },
        {
            "label": "Run Serial Tool.exe (build)",
            "type": "process",
            "command": "build/exe.win-amd64-3.7/SerialTool.exe",
            "problemMatcher": []
        }
    ]
}